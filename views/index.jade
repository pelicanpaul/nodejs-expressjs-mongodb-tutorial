extends layout
block content
    h1= title
    p Welcome to our test
    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                | <span id='userInfoName'></span>
                br
                strong Age:
                | <span id='userInfoAge'></span>
                br
                strong Gender:
                | <span id='userInfoGender'></span>
                br
                strong Location:
                | <span id='userInfoLocation'></span>
                br
                strong Username:
                | <span id='userInfoUsername'></span>
                br
                strong Favorite Color:
                | <span id='userInfoColor'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Email
                    th Update
                    th Delete
                tbody
        // /USER LIST

        // ADD USER
        h2 Add User
        form#addUser
            fieldset
                input#inputUserName(type='text', placeholder='Username')
                br
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                br
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                br
                input#inputUserGender(type='text', placeholder='gender')
                br
                input#inputUserColor(type='text', placeholder='Favorite Color')
                br
                button#btnAddUser Add User
        // /ADD USER

        // UPDATE USER
        br
        br
        h2 Update User
        form#updateUser
            fieldset
                input#inputUserNameUpdate(type='text', placeholder='Username')
                br
                input#inputUserEmailUpdate(type='text', placeholder='Email')
                br
                input#inputUserFullnameUpdate(type='text', placeholder='Full Name')
                br
                input#inputUserAgeUpdate(type='text', placeholder='Age')
                brs
                input#inputUserLocationUpdate(type='text', placeholder='Location')
                br
                input#inputUserGenderUpdate(type='text', placeholder='gender')
                br
                input#inputUserColorUpdate(type='text', placeholder='Favorite Color')
                br
                input#inputUserIdUpdate(type='text', placeholder='')
                br
                button#btnUpdateUser Update User
        // /UPDATE USER

    // /WRAPPER